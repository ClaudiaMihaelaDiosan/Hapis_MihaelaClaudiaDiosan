<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/margin_right"
    android:layout_marginStart="@dimen/margin_left"
    android:gravity="center">

    <ImageView
        android:id="@+id/rv_close_pop_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="@dimen/rv_close_margin_top"
        android:layout_marginEnd="@dimen/rv_close_margin_right"
        android:elevation="@dimen/rv_close_elevation"
        android:layout_alignParentEnd="true"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/rv_card_corner_radius"
        app:cardElevation="@dimen/rv_card_view_elevation"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/rv_linear_layout_margin_top"
                android:layout_marginBottom="@dimen/rv_linear_layout_margin_bottom">

                <ImageView
                    android:layout_width="@dimen/check_size"
                    android:layout_height="@dimen/check_size"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/rv_check_margin_bottom"/>

                <TextView
                    android:id="@+id/rv_title_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/rv_tex_view_margin_right"
                    android:layout_marginStart="@dimen/rv_tex_view_margin_left"
                    android:layout_marginBottom="@dimen/bottom_margin"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/rv_card_view_text_size"
                    android:text="@string/register_volunteer_pop_up_title"/>

                <TextView
                    android:id="@+id/rv_message_pop_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/rv_tex_view_margin_right"
                    android:layout_marginStart="@dimen/rv_tex_view_margin_left"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/rv_card_view_text_size"
                    android:text="@string/register_volunteer_pop_up_message"/>

                <Button
                    android:id="@+id/rv_ok_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_button_margin"
                    android:layout_marginStart="@dimen/rv_button_margin"
                    android:layout_marginEnd="@dimen/rv_button_margin"
                    android:text="@string/register_donor_pop_up_button"
                    android:textSize="@dimen/rv_button_size"
                    android:background="@drawable/btn_gradient_style"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>