<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".donor.HelpDonorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margins"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/title"
            android:text="@string/help_text_title" />

        <ImageView
            android:layout_width="@dimen/contact_image"
            android:layout_height="@dimen/contact_image"
            android:layout_gravity="center"
            android:src="@drawable/help_img"
            android:contentDescription="@string/content_description"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/elevation"
            android:layout_marginBottom="@dimen/donor_bottom_margin"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margins"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_1"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_2"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_3"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_4"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_5"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_6"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_7"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_8"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/body"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_help_9"
