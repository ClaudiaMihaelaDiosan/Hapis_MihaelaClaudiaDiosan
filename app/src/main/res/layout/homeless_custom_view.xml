<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/end_margin"
        android:layout_marginBottom="@dimen/bottom_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/end_margin"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginBottom="@dimen/bottom_margin">


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/light_blue"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/homeless_username_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin"
                android:textSize="@dimen/hcv_title_size"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="@string/hcv_username"/>

                <TextView
                    android:id="@+id/homeless_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/hcv_phone"/>


                <TextView
                    android:id="@+id/homeless_birthday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/hcv_birthday"/>


                <TextView
                    android:id="@+id/homeless_lifeHistory_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/hcv_life_history"/>


                <TextView
                    android:id="@+id/homeless_locationAddress_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/hcv_address"/>


                <TextView
                    android:id="@+id/homeless_schedule_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/hcv_schedule"/>



                <TextView
                    android:id="@+id/homeless_need_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/hcv_need"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/edit_homeless_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_homeless_icon"
                android:backgroundTint="@color/white"/>


            <ImageButton
                android:id="@+id/delete_homeless_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_homeless_icon"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>