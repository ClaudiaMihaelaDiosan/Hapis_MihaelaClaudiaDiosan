<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/margin_right_large"
    android:layout_marginStart="@dimen/margin_left_large"
    android:gravity="center">

    <ImageView
        android:id="@+id/close_pop_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="@dimen/close_margin_top_large"
        android:layout_marginEnd="@dimen/close_margin_right_large"
        android:elevation="@dimen/close_elevation_large"
        android:layout_alignParentEnd="true"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius_large"
        app:cardElevation="@dimen/card_view_elevation_large"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/linear_layout_margin_top_large"
                android:layout_marginBottom="@dimen/linear_layout_margin_bottom_large">

                <ImageView
                    android:layout_width="@dimen/check_size"
                    android:layout_height="@dimen/check_size"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/check_margin_bottom_large"/>



                <TextView
                    android:id="@+id/message_pop_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/tex_view_margin_right_large"
                    android:layout_marginStart="@dimen/tex_view_margin_left_large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/card_view_text_size_large"
                    android:text="@string/pop_up_message"/>

                <Button
                    android:id="@+id/go_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/button_margin_large"
                    android:layout_gravity="center"
                    android:text="@string/pop_up_button"
                    android:textSize="@dimen/go_to_login_button_large"
                    android:background="@drawable/btn_gradient_style"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/button_text_margins"
                    android:paddingEnd="@dimen/button_text_margins"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>