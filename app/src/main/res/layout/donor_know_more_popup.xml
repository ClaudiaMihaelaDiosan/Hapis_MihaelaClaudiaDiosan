<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/end_margin"
    android:layout_marginStart="@dimen/start_margin"
    android:gravity="center">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/km_card_corner_radius"
        app:cardElevation="@dimen/km_card_view_elevation"
        app:cardBackgroundColor="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/know_more_donor_popup_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_marginEnd="@dimen/km_close_margin_right"
                    android:elevation="@dimen/km_close_elevation"
                    android:layout_gravity="end"
                    android:contentDescription="@string/content_description_close_popup"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/km_tex_view_margin_right"
                    android:layout_marginStart="@dimen/km_tex_view_margin_left"
                    android:layout_marginBottom="@dimen/km_bottom_margin"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="@dimen/km_card_view_title_size"
                    android:text="@string/donor_know_more_title"/>

                <TextView
                    android:id="@+id/know_more_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/km_tex_view_margin_right"
                    android:layout_marginStart="@dimen/km_tex_view_margin_left"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:textSize="@dimen/km_card_view_text_size"
                    android:text="@string/donor_know_more_text"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/know_more_donor_ok_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/register_donor_pop_up_button"
                    android:textSize="@dimen/km_button_size"
                    style="?attr/borderlessButtonStyle"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>