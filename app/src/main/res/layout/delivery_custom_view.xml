<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/deliver_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/end_margin"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/white">


            <TextView
                android:id="@+id/contacted_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:textSize="@dimen/title"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="@string/contacted_text"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margins">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/contactedBtn"
                            android:backgroundTint="@color/white"
                            android:textSize="@dimen/body"
                            android:layout_marginEnd="@dimen/end_margin"
                            android:textColor="@color/colorPrimary"
                            app:iconTint="@null"
                            app:icon="@drawable/contacted_img"
                            app:iconSize="24dp"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:layout_marginBottom="@dimen/cv_margins"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/colorPrimaryDark"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:text="@string/contacted_btn" />
                    </LinearLayout>

                        <TextView
                            android:id="@+id/delivery_donor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/title"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:text="@string/text"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:text="@string/donation_type_tv"/>

                        <TextView
                            android:id="@+id/delivery_donation_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:text="@string/text"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:text="@string/donates_to"/>

                        <TextView
                            android:id="@+id/delivery_donates_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:text="@string/text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:text="@string/can_be"/>

                        <TextView
                            android:id="@+id/delivery_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:text="@string/text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:text="@string/on"/>

                        <TextView
                            android:id="@+id/delivery_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:text="@string/text"/>

                        <TextView
                            android:id="@+id/delivery_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:text="@string/text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textSize="@dimen/body"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:text="@string/contact"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/delivery_donor_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/start_margin"
                                android:textSize="@dimen/body"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="@string/text"/>

                            <TextView
                                android:id="@+id/delivery_donor_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/start_margin"
                                android:textSize="@dimen/body"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="@string/text"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deliveredBtn"
                            android:layout_marginStart="@dimen/start_margin"
                            android:layout_marginEnd="@dimen/end_margin"
                            android:backgroundTint="@color/white"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimary"
                            app:iconTint="@null"
                            app:icon="@drawable/delivered_img"
                            app:iconSize="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/green"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:text="@string/delivered_btn" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cancelDeliverBtn"
                            android:backgroundTint="@color/white"
                            android:textSize="@dimen/body"
                            android:layout_marginEnd="@dimen/end_margin"
                            android:layout_marginStart="@dimen/start_margin"
                            android:textColor="@color/colorPrimary"
                            app:iconTint="@null"
                            app:icon="@drawable/cancel_img"
                            app:iconSize="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/red"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:text="@string/cancel_deliver_btn" />

                    </LinearLayout>


                </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>