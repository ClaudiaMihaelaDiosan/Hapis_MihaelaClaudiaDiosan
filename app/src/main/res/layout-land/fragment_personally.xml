<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="60dp"
    tools:context=".donor.PersonallyFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/end_margin"
        android:layout_marginBottom="@dimen/bottom_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/end_margin"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginBottom="@dimen/bottom_margin">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/homeless_location_text"
                    android:text="@string/location_text_personally"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    />

                <TextView
                    android:id="@+id/homeless_location"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Cronista Muntaner, 18, Lleida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView

                    android:text="@string/schedule_text_personally"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    />

                <TextView
                    android:id="@+id/homeless_schedule_text"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/bottom_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Cada dia por la maÃ±ana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_weight="4">

                <!-- MapFragment with lite mode enabled -->
                <fragment
                    android:id="@+id/homeless_location_map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</ScrollView>



