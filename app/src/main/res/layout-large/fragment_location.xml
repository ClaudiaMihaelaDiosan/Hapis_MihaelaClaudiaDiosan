<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".volunteer.LocationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/top_margin_large"
            android:layout_marginBottom="@dimen/bottom_margin_large"
            android:layout_marginStart="@dimen/start_margin_large"
            android:layout_marginEnd="@dimen/end_margin_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/top_margin_large"
                android:layout_marginStart="@dimen/start_margin_large"
                android:layout_marginBottom="@dimen/bottom_margin_large"
                android:layout_marginEnd="@dimen/end_margin_large"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/bottom_margin_large"
                    android:textSize="@dimen/fl_text_large"
                    android:textColor="@color/grey"
                    android:text="@string/location_fragment_title"/>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin_large"
                    android:layout_marginBottom="@dimen/bottom_margin_large"
                    android:backgroundTint="@color/light_blue"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/autocomplete_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:name=
                            "com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        />

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/selected_location_text"
                    android:visibility="invisible"
                    android:textSize="@dimen/fl_text_large"
                    android:text="@string/selected_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin_large"
                    android:layout_marginBottom="@dimen/bottom_margin_large"
                    />

                <TextView
                    android:id="@+id/selected_location_tv"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/top_margin_large"
                    android:layout_marginBottom="@dimen/bottom_margin_large"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fl_text_large"
                    />

                <!-- MapFragment with lite mode enabled -->
                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginBottom="@dimen/bottom_margin_large"
                    map:liteMode="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin_large"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancelLocationBtn"
                        style="?attr/borderlessButtonStyle"
                        android:textSize="@dimen/fl_text_large"
                        android:layout_marginEnd="@dimen/end_margin_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homeless_profile_cancel_button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveLocationButton"
                        style="?attr/borderlessButtonStyle"
                        android:textSize="@dimen/fl_text_large"
                        android:layout_marginStart="@dimen/start_margin_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homeless_profile_save_button" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</FrameLayout>