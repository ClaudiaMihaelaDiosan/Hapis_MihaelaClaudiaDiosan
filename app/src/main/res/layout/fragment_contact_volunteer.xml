<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".login.ForgotPasswordActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/elevation"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginEnd="@dimen/right_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/vcf_title_size"
                android:text="@string/vcf_title"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginBottom="@dimen/bottom_margin"/>

            <TextView
                android:id="@+id/fp_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vcf_text"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/vcf_body_size"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginStart="@dimen/left_margin"
                android:layout_marginEnd="@dimen/right_margin"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/volunteer_contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/vcf_email_hint"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_contact_message_volunteer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vcf_edit_text_box"
                    android:hint="@string/vcf_text_hint"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/volunteer_contact_button"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/vcf_button"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/bottom_margin"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</FrameLayout>







