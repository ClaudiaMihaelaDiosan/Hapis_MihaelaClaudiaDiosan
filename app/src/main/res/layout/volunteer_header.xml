<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:background="@drawable/volunteer_header"
    android:orientation="horizontal"
    android:gravity="bottom">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/volunteer_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volunteer_username_text_view"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/volunteer_emai_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volunteer_email_text_view"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"/>

    </LinearLayout>







</LinearLayout>