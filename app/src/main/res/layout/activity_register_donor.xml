<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:baselineAligned="false"
                android:layout_marginTop="@dimen/top_margin"
                android:src="@drawable/logo_hapis"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_donor_title"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:textColor="@color/grey"
                android:textSize="@dimen/create_donor_account_title"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginStart="@dimen/left_margin"
                android:layout_marginEnd="@dimen/right_margin"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/bottom_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_donor_login_info"
                    android:textSize="@dimen/register_donor_login_info_size"
                    android:textColor="@color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/donor_username_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_donor_username_hint"
                        android:drawableStart="@drawable/username_drawable"
                        android:drawablePadding="@dimen/drawable_padding"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/donor_email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_donor_email_hint"
                        android:drawableStart="@drawable/email_drawable"
                        android:drawablePadding="@dimen/drawable_padding"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/donor_password_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_donor_password_hint"
                        android:drawableStart="@drawable/password_drawable"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:inputType="textPassword"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_donor_opional_info"
                    android:textSize="@dimen/register_donor_optional_info"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/donor_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_donor_first_name_hint"
                        android:drawableStart="@drawable/username_drawable"
                        android:drawablePadding="@dimen/drawable_padding"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/donor_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_donor_last_name_hint"
                        android:drawableStart="@drawable/username_drawable"
                        android:drawablePadding="@dimen/drawable_padding"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginEnd="@dimen/right_margin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/donor_birthday_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_donor_birthday"
                        android:drawableStart="@drawable/birthday_drawable"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:focusable="false"
                        android:focusableInTouchMode="false"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/donor_terms_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                    <TextView
                        android:id="@+id/accept_terms_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/bottom_margin"
                        android:text="@string/register_donor_terms" />


                </LinearLayout>

                <Button
                    android:id="@+id/register_donor_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/left_margin"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginEnd="@dimen/right_margin"
                    android:background="@drawable/btn_gradient_style"
                    android:text="@string/register_donor_button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/register_donor_button" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>






</LinearLayout>