<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/donatefragment"
android:background="@drawable/gradient_background"
tools:context=".donor.DonateDonorFragment"
    >


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/elevation"
    android:layout_marginTop="@dimen/top_margin"
    android:layout_marginBottom="@dimen/bottom_margin"
    android:layout_marginStart="@dimen/start_margin"
    android:layout_marginEnd="@dimen/end_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/end_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/vcf_title_size"
            android:text="@string/donor_donate_title"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginBottom="@dimen/bottom_margin"/>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/donate_drawable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/donor_donate_text"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginBottom="@dimen/bottom_margin"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/donor_donate_button"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/donor_donate_button"
            android:textColor="@color/white"
            android:padding="@dimen/recover_password_button_padding"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginBottom="@dimen/bottom_margin"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/donor_donate_video"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginBottom="@dimen/bottom_margin"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin">

            <VideoView
                android:id="@+id/videoViewDonor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


</FrameLayout>