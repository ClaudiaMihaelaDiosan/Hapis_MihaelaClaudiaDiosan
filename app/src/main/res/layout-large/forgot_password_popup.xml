<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/fp_margin_right_large"
    android:layout_marginStart="@dimen/fp_margin_left_large"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_view_elevation"
        app:cardBackgroundColor="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/linear_layout_margin_bottom_large">

            <ImageView
                android:id="@+id/close_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_48dp"
                android:layout_marginTop="@dimen/close_margin_top_large"
                android:layout_marginEnd="@dimen/close_margin_right_large"
                android:elevation="@dimen/close_elevation"
                android:layout_gravity="end"
                android:contentDescription="@string/content_description_close_popup"
                />

            <ImageView
                android:layout_width="@dimen/check_size_large"
                android:layout_height="@dimen/check_size_large"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/check_margin_bottom_large"
                android:contentDescription="@string/content_description_check"/>



            <TextView
                android:id="@+id/message_pop_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tex_view_margin_right_large"
                android:layout_marginStart="@dimen/tex_view_margin_left_large"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="@dimen/card_view_text_size_large"
                android:text="@string/pop_up_message"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/button_margin_large"
                android:layout_marginStart="@dimen/button_margin_large"
                android:layout_marginEnd="@dimen/button_margin_large"
                android:text="@string/pop_up_button"
                android:textSize="@dimen/forgot_password_popup_button_large"
                android:textStyle="bold"
                style="?attr/borderlessButtonStyle"
                android:drawableStart="@drawable/back_arrow"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>