<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/end_margin_large"
    android:layout_marginStart="@dimen/start_margin_large"
    android:layout_marginTop="@dimen/top_margin_large"
    android:layout_marginBottom="@dimen/bottom_margin_large"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/start_margin_large"
        android:layout_marginTop="@dimen/top_margin_large"
        android:layout_marginEnd="@dimen/end_margin_large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/intro_title_large"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="400dp"
        android:layout_height="315dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/start_margin_large"
        android:layout_marginEnd="@dimen/end_margin_large"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/intro_img_contentDescription"/>


    <TextView
        android:id="@+id/intro_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/grey"
        android:layout_marginStart="@dimen/start_margin_large"
        android:layout_marginTop="@dimen/top_margin_large"
        android:layout_marginEnd="@dimen/end_margin_large"
        android:textSize="@dimen/intro_description_large" />

</LinearLayout>