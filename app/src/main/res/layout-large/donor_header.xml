<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/donor_header_large"
    android:background="@drawable/volunteer_header"
    android:orientation="horizontal"
    android:gravity="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_margin_large"
        android:orientation="vertical">


        <TextView
            android:id="@+id/donor_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donor_username_text_view"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/donor_username_text_view_large"/>

        <TextView
            android:id="@+id/donor_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donor_email_text_view"
            android:textStyle="bold"
            android:textSize="@dimen/donor_email_text_view_large"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/donor_phone_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donor_phone_text_view"
            android:textStyle="bold"
            android:textSize="@dimen/donor_phone_text_view_large"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</LinearLayout>